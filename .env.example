# Base de datos PostgreSQL
# Ejemplo para Neon: postgresql://username:password@hostname/database?sslmode=require
DATABASE_URL="postgresql://username:password@hostname:5432/database"

# NextAuth.js configuración
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="tu-secret-super-secreto-cambiame-en-produccion"

# Resend para envío de emails
# Obtener en: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxx"
RESEND_FROM_EMAIL="notifications@tudominio.com"

# Configuración de la aplicación
APP_NAME="RC Starter Kit"

# Vercel Blob Storage (para imágenes de perfil)
# Obtener en: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxx"

# Opcional: URL de Vercel Blob (se autogenera si no se especifica)
# BLOB_STORE_URL="https://xxxxxxxxxx.public.blob.vercel-storage.com"